<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MediVault" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/medi_blue</item>
        <item name="colorPrimaryVariant">@color/medi_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medi_teal</item>
        <item name="colorSecondaryVariant">@color/medi_teal_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Enable window content transitions. -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.MediVault.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources> 